<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700" prefWidth="1300" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.uniquindio.bd.electrocolombiano.controller.DIANReportController">
    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <HBox alignment="CENTER_LEFT" style="-fx-padding: 15;">
                <ImageView fitHeight="70.0" fitWidth="280.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../../images/logo_header_BD.png" />
                    </image>
                </ImageView>
                <Region prefHeight="70.0" prefWidth="688.0" HBox.hgrow="ALWAYS" />
                <VBox alignment="CENTER_RIGHT" prefHeight="70.0" prefWidth="257.0">
                    <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="179.0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12;" text="Bienvenido" />
                    <Label fx:id="txt_header_currentUser" alignment="CENTER_RIGHT" prefHeight="22.0" prefWidth="221.0" style="-fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;" text="Juan Pablo López" />
                </VBox>
            </HBox>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #ecf0f1;">
            <VBox alignment="TOP_CENTER" prefHeight="543.0" prefWidth="1300.0" spacing="20" style="-fx-padding: 25;">
                <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="GENERAR REPORTE -DIAN-" />
                <Label text="Se generará un reporte del IVA a pagar en el trimestre seleccionado">
                    <font>
                        <Font size="18.0" />
                    </font></Label>

                <!-- Sección de Información del Cliente -->
                <VBox alignment="CENTER_LEFT" prefHeight="196.0" prefWidth="1248.0" spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                    <HBox prefHeight="36.0" prefWidth="997.0">
                        <children>
                            <Label layoutX="358.0" layoutY="10.0" prefHeight="17.0" prefWidth="212.0" />
                            <Label style="-fx-font-size: 25; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Trimestre del año" />
                            <Label prefHeight="17.0" prefWidth="23.0" />
                            <ComboBox fx:id="combo_trimestre" prefWidth="150.0" promptText="Trimestre" stylesheets="@../../../../styles/style_combo_box.css" />
                            <Label layoutX="502.0" layoutY="10.0" prefHeight="17.0" prefWidth="79.0" />
                            <Label style="-fx-font-size: 25; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Año" />
                            <Label prefHeight="17.0" prefWidth="23.0" />
                            <ComboBox fx:id="combo_year" prefWidth="150.0" promptText="Año" stylesheets="@../../../../styles/style_combo_box.css" />
                        </children>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="24.0" prefWidth="1208.0" />
                </VBox>
                <Label />

                <!-- Botones de Acción -->
                <HBox alignment="CENTER" spacing="20" style="-fx-padding: 15;">
                    <Button onAction="#back_btn" prefHeight="40" prefWidth="140" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 8; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(149, 165, 166, 0.4), 8, 0.3, 0, 2);" text="⬅️ Volver">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                    <Button onAction="#generatePDF_btn" prefHeight="40" prefWidth="179.0" style="-fx-background-color: #e13c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 8; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(155, 89, 182, 0.4), 8, 0.3, 0, 2);" text="Generar Reporte PDF">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="47.0" prefWidth="1300.0" style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Label style="-fx-text-fill: #bdc3c7; -fx-font-size: 11;" text="© ELECTROCOLOMBIANO 2025" />
        </HBox>
    </bottom>
</BorderPane>
