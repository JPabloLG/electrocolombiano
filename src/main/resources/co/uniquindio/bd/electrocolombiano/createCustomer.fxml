                        <image>
                            <Image url="@../../../../images/default_avatar.png" />
                        </image>
                    </ImageView>
                    <Button onAction="#selectPhoto" prefHeight="30" prefWidth="160" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(52, 152, 219, 0.4), 8, 0.3, 0, 2);" text=" Seleccionar Foto">
