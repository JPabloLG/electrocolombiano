                        <TextField fx:id="txt_fullName" prefHeight="40" prefWidth="350" promptText="Ingrese el nombre completo" stylesheets="@../../../../styles/style_text_field.css" />
                    </VBox>

                </VBox>
            </HBox>

            <!-- Botones de Acci贸n -->
