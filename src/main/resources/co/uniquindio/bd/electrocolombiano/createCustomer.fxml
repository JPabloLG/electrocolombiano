                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>

                <Button onAction="#saveCustomer_btn" prefHeight="40" prefWidth="180" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 8; -fx-border-radius: 8; -fx-effect: dropshadow(gaussian, rgba(39, 174, 96, 0.4), 8, 0.3, 0, 2);" text=" Guardar Cliente">
